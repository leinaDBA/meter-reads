  "types": "dist/index.d.ts",
  "engines": {
    "node": "^14",
    "npm": "^6"
  },
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "dev": "concurrently \"npm run type-check:watch\" \"npm run lint:watch -- --fix\" \"webpack serve --mode development\"",
    "lint": "eslint '**/*.{ts,js}'",
    "lint:watch": "esw --ext .ts -w '**/*.{ts,js}' --color",
    "start": "",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "jest",
    "type-check:watch": "npm run build -- --watch",
    "preversion": "npm run build && npm test",
    "version": "git add -A dist",
    "postversion": "git push --no-verify && git push --tags --no-verify"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/leinaDBA/meter-reads.git"
  },
  "keywords": [],
  "author": "",
