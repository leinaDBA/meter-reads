    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-watch": "^7.0.0",
    "jest": "^26.6.3",
    "pre-push": "^0.1.1",
    "prettier": "^2.2.1",
    "sinon": "^9.2.4",
    "ts-jest": "^26.5.0",
    "ts-loader": "^8.0.15",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.1.5"
  },
  "pre-push": [
    "test"
  ]
